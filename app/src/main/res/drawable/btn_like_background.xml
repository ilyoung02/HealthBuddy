<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 둥근 버튼 배경 -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- 버튼 배경색 -->
            <stroke android:width="2dp" android:color="#FF5252" /> <!-- 테두리 색상 -->
            <corners android:radius="30dp" /> <!-- 둥근 버튼 -->
        </shape>
    </item>

    <!-- 중앙의 하트 아이콘 -->
    <item>
        <inset
            android:insetLeft="8dp"
            android:insetTop="8dp"
            android:insetRight="8dp"
            android:insetBottom="8dp">
            <bitmap
                android:src="@drawable/ic_heart"/>
        </inset>
    </item>
</layer-list>
