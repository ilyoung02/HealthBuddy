<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".Matching.ProfileDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="264dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_weight="1">

        <!-- 프로필 이미지 -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/bg_post_item"
            android:elevation="1dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:orientation="vertical">
            <!-- 이름과 성별, 나이 -->
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="이름"
                android:textColor="@android:color/black"
                android:textSize="27sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left">

                <TextView
                    android:id="@+id/profile_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="성별"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/profile_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="나이"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="좋아요 수:"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>
            <!-- 채팅 버튼 -->
            <Button
                android:id="@+id/btn_chat"
                android:layout_width="115dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rounded_button"
                android:clickable="true"
                android:focusable="true"
                android:text="채팅하기"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical">

            <!-- 소개글 -->
            <TextView
                android:id="@+id/profile_bio"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_weight="1"
                android:textSize="16sp"
                android:text="소개글"
                android:textColor="@android:color/black"
                android:background="@drawable/profile_intro_background"
                android:padding="12dp" />

            <!-- 후기 -->
<!--            scrollView 로 바꿔야 될듯?-->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/review_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="13dp"
                android:layout_weight="1"
                android:padding="12dp"
                android:scrollbars="vertical"
                android:background="@drawable/profile_intro_background"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:background="@drawable/profile_intro_background"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- 선호 운동 예시 -->
            <TextView
                android:id="@+id/profile_fav_workouts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginEnd="8dp"
                android:text="선호 운동"
                android:textColor="@color/black"
                android:textSize="17sp"/>

            <!-- 운동 구력 -->
            <TextView
                android:id="@+id/profile_workout_years"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginEnd="8dp"
                android:text="운동 구력"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <!-- 운동 목표 예시 -->
            <TextView
                android:id="@+id/profile_workout_goal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginEnd="8dp"
                android:text="운동 목표"
                android:textColor="@color/black"
                android:textSize="17sp" />

            <!-- 지역 예시 -->
            <TextView
                android:id="@+id/profile_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginEnd="8dp"
                android:text="지역"
                android:textColor="@color/black"
                android:textSize="17sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
