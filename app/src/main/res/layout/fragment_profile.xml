<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center_vertical">

        <!-- Profile Title -->
        <TextView
            android:id="@+id/profile_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="내 프로필"
            android:layout_marginLeft="75dp"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:text="로그아웃"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:layout_marginLeft="16dp"/>
    </LinearLayout>

    <!-- 프로필 이미지 및 이름, 성별, 나이 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp">

        <!-- 프로필 이미지 -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="@drawable/box_background"
            android:layout_marginEnd="12dp" />

        <!-- 이름, 성별, 나이 -->
        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 이름 -->
            <TextView
                android:id="@+id/profile_nikname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홍길동"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black" />

            <!-- 성별 -->
            <TextView
                android:id="@+id/profile_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남자"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="6dp" />

            <!-- 나이 -->
            <TextView
                android:id="@+id/profile_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:orientation="vertical">
            <!-- 수정 버튼 -->
            <Button
                android:id="@+id/btn_edit"
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:text="수정"
                android:textColor="#FFFFFF"
                android:backgroundTint="#6795ED"
                android:clickable="true"
                android:focusable="true" />

            <!-- 좋아요 섹션 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_marginTop="38dp">

                <!-- 좋아요 아이콘 -->
                <ImageView
                    android:id="@+id/like_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_like"
                    android:layout_marginEnd="8dp" />

                <!-- 좋아요 개수 -->
                <TextView
                    android:id="@+id/like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- 헬스버디 on/off 스위치 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginBottom="10dp">

        <!-- 헬스버디 상태 텍스트 -->
        <TextView
            android:id="@+id/health_buddy_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="헬스버디"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginEnd="8dp" />

        <!-- 헬스버디 스위치 -->
        <Switch
            android:id="@+id/health_buddy_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true" />
    </LinearLayout>

    <!-- 상태 메시지 -->
    <TextView
        android:id="@+id/profile_bio_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="운동 같이 하실분?"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:background="@drawable/profile_intro_background"
        android:padding="8dp"
        android:layout_marginBottom="10dp"/>

    <!-- 댓글 섹션 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="김모씨 : 열심히하고 성실합니다"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:text="박모씨 : 약속 잘지키고 운동 잘해요"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:text="최모씨 : 별로예요"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginBottom="4dp" />
    </LinearLayout>

    <!-- 태그 섹션 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구력 6년"
            android:textColor="@android:color/black"
            android:background="@drawable/profile_tag"
            android:padding="8dp"
            android:layout_marginRight="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="벤치"
            android:textColor="@android:color/black"
            android:background="@drawable/profile_tag"
            android:padding="8dp"
            android:layout_marginRight="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="스쿼트"
            android:textColor="@android:color/black"
            android:background="@drawable/profile_tag"
            android:padding="8dp"
            android:layout_marginRight="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대회준비"
            android:textColor="@android:color/black"
            android:background="@drawable/profile_tag"
            android:padding="8dp"
            android:layout_marginRight="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="대구"
            android:textColor="@android:color/black"
            android:background="@drawable/profile_tag"
            android:padding="8dp" />
    </LinearLayout>
</LinearLayout>
